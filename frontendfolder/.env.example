# Example Environment Variables for Frontend
# Copy this file to .env and modify as needed

# Backend API URL
# For local development (Docker): http://localhost:8000/api/
# For production: https://your-backend-domain.com/api/
VITE_REACT_APP_API_URL="http://localhost:8000/api/"

# Media URL for file uploads and images
# For local development (Docker): http://localhost:8000/media/
# For production: https://your-backend-domain.com/media/
VITE_MEDIA_URL="http://localhost:8000/media/"

# OpenRouter API Key (for AI features)
VITE_OPENROUTER_API_KEY="your-openrouter-api-key-here"

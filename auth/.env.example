# ==========================================================
# Django Environment Configuration (.env.example)
# ==========================================================

# ----------------------------------------------------------
# General Django Settings
# ----------------------------------------------------------

# Enable debug mode (set to "True" only for local development)
DEBUG=True

# Django secret key (replace with a strong, unique value in production)
SECRET_KEY=your-django-secret-key

# Current environment (development, staging, production, etc.)
ENVIRONMENT=development

# Comma-separated list of valid hosts
# Use "*" for dev; always specify exact domains in production
ALLOWED_HOSTS=*

# ----------------------------------------------------------
# Database Settings (PostgreSQL for production, SQLite in dev)
# ----------------------------------------------------------

PGHOST=localhost
PGPORT=5432
POSTGRES_DB=your-db-name
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-db-password

# ----------------------------------------------------------
# Email Settings
# ----------------------------------------------------------

# Email backend (options: smtp, console, file-based, etc.)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Example Gmail SMTP configuration:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password   # Use App Passwords for Gmail
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=your-team@yourdomain.com

# ----------------------------------------------------------
# Frontend Configuration
# ----------------------------------------------------------

# Base URL of the frontend (used in emails, redirects, etc.)
FRONTEND_BASE_URL=http://localhost:3000

# ----------------------------------------------------------
# Cookie Configuration
# ----------------------------------------------------------

# Domain to set for cookies
COOKIE_DOMAIN=localhost

# ----------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------

# Allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

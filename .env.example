# Example Environment Variables for Local Development
# Copy this file to .env and modify as needed

# Database Configuration
# For local development: Comment out DATABASE_URL to use SQLite automatically
# For production: Uncomment and set your PostgreSQL URL
# DATABASE_URL="postgresql://postgres:<PASSWORD>@<HOST>:<PORT>/<DATABASE>"

# Debug Mode
DEBUG="True"

# Django Secret Key (generate a secure one for production)
DJANGO_SECRET_KEY="your-secret-key-here"

# Email Configuration (replace with your email service credentials)
EMAIL_HOST_PASSWORD="your-email-password"
EMAIL_HOST_USER="your-email@domain.com"

# Celery Configuration
# For local development: Comment out to use docker-compose RabbitMQ
# For production: Uncomment and set your message broker URL
# CELERY_BROKER_URL="amqp://<USER>:<PASS>@<HOST>:<PORT>//"
CELERY_RESULT_BACKEND="rpc://"

# API Keys
VITE_OPENROUTER_API_KEY="your-openrouter-api-key-here"
